<div class='page'>
  <div class='header'>
    
      {{#with header}}
        <header class='header_content'>
          <div class='header_blok'>
            <img
              src='svg/apple.svg'
              alt='Apple'
              class='header_icon'
            />

            <nav class='header_blok'>
              {{#each links}}
                <a
                  href='{{url}}'
                  class='header_link'
                >{{text}}</a>
              {{/each}}
            </nav>
          </div>
          <div class='header_blok'>
            <img
              src='svg/serch.svg'
              alt='Serch'
              class='header_icon'
            />
            <img
              src='svg/profile.svg'
              alt='Profil'
              class='header_icon'
            />
          </div>
        </header>
      
    </div>
    

    {{#with ad}}
    <div class="info">
      <div class="info_blok">
      <p class="info_text">{{title}}</p>
      {{#with link}}
      <a href="{{url}}" class="info_url">{{text}}</a>
      {{/with}}
    </div>
    </div>
    {{/with}}

{{/with}}

